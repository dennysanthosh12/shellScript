@Bean
public WebClient webClient() {

    HttpClient httpClient = HttpClient.create()
        .option(ChannelOption.CONNECT_TIMEOUT_MILLIS, 3000) // 3 sec connect
        .responseTimeout(Duration.ofSeconds(5));             // 5 sec response

    return WebClient.builder()
        .clientConnector(
            new ReactorClientHttpConnector(httpClient)
        )
        .build();
}
