 cat app-deplyoyment.yaml
apiVersion: v1
kind: Service
metadata:
  name: app-service
spec:
  type: NodePort
  selector:
    app: application
  ports:
    - protocol: TCP
      port: 8080
      targetPort: 8080
      nodePort: 50032
---
apiVersion: v1
kind: Deployment
metadata:
  name: app-deployment
  labels:
    app: application
spec:
  selector:
    matchLabels:
      app: application
  template:
    metadata:
      labels:
        app: application
    spec:
      containers:
      - name: application
        image: app:v1.1
        ports:
        - containerPort: 8080


